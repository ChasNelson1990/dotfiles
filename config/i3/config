# variables
    ## use super as mod key
    set $mod Mod4

    ## terminal emulator
    set $term alacritty

    ## launcher
    set $menu "rofi -show combi -config ~/.config/rofi/config.rasi"

    ## browser
    set $browser firefox

    ## workspaces
    set $ws1 "1:  "
    set $ws2 "2:  "
    set $ws3 "3:  "
    set $ws4 "4:  "
    set $ws5 "5:  "
    set $ws6 "6:  "
    set $ws7 "7:  "
    set $ws8 "8:  "
    set $ws9 "9"
    set $ws10 "10:  "

# visuals
    ## font
    font pango:RobotoMono Nerd Font 10

    ## desktop background
        ### colour
        exec_always --no-startup-id xsetroot -solid "#2E3440"
        ### image
        # exec_always --no-startup-id feh --bg-center ~/git/dotfiles/wallfull.png

    ## colours
        ### Property Name       Border  BG      Text    Indicator   Child Border
        client.focused          #5E81AC #2E3440 #ECEFF4 #88C0D0     #5E81AC
        client.focused_inactive #2E3440 #2E3440 #ECEFF4 #2E3440     #2E3440
        client.unfocused        #2E3440 #2E3440 #ECEFF4 #2E3440     #2E3440
        client.urgent           #BF616A #BF616A #ECEFF4 #BF616A     #BF616A
        client.background       #2E3440

# screenlock
    set $screenlock "betterlockscreen --lock"

# workspace behaviour
    # don't follow the mouse around the screen
    focus_follows_mouse no

    # auto return if the active workspace is keyed
    workspace_auto_back_and_forth yes

    # the following windows should be floating
    for_window [window_role="pop-up"] floating enable
    for_window [window_role="task_dialog"] floating enable

# key-bindings
    # basics:
        # start a terminal
        bindsym $mod+Return exec --no-startup-id $term

        # kill focused window
        bindsym Mod1+F4 kill

        # start your launcher
        bindsym $mod+d exec $menu

        # start browser
        bindsym $mod+Shift+apostrophe exec $browser

        # lock screen
        bindsym $mod+l exec $screenlock

        # volume keys
        bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
        bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
        bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

        # brightness keys
        bindsym XF86MonBrightnessUp exec brightnessctl set +5%
        bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

        # reload the configuration file
        bindsym $mod+Shift+c reload

        # exit i3 (logs you out of your X session)
        bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

        # screen capture to clipboard
        #interactive screenshot by pressing printscreen
        bindsym Print exec xfce4-screenshooter

        # pause notifications
        #FIXME for wired
        bindsym $mod+n exec dunstctl set-paused toggle

    # moving around:
        # shift focus
        bindsym $mod+Left focus left
        bindsym $mod+Down focus down
        bindsym $mod+Up focus up
        bindsym $mod+Right focus right

        # move the focused window
        bindsym $mod+Shift+Left move left
        bindsym $mod+Shift+Down move down
        bindsym $mod+Shift+Up move up
        bindsym $mod+Shift+Right move right

    # workspaces:
        # switch to workspace
        bindsym $mod+1 workspace number $ws1
        bindsym $mod+2 workspace number $ws2
        bindsym $mod+3 workspace number $ws3
        bindsym $mod+4 workspace number $ws4
        bindsym $mod+5 workspace number $ws5
        bindsym $mod+6 workspace number $ws6
        bindsym $mod+7 workspace number $ws7
        bindsym $mod+8 workspace number $ws8
        bindsym $mod+9 workspace number $ws9
        bindsym $mod+0 workspace number $ws10
        # move focused container to workspace
        bindsym $mod+Shift+1 move container to workspace number $ws1
        bindsym $mod+Shift+2 move container to workspace number $ws2
        bindsym $mod+Shift+3 move container to workspace number $ws3
        bindsym $mod+Shift+4 move container to workspace number $ws4
        bindsym $mod+Shift+5 move container to workspace number $ws5
        bindsym $mod+Shift+6 move container to workspace number $ws6
        bindsym $mod+Shift+7 move container to workspace number $ws7
        bindsym $mod+Shift+8 move container to workspace number $ws8
        bindsym $mod+Shift+9 move container to workspace number $ws9
        bindsym $mod+Shift+0 move container to workspace number $ws10

        # move prev|next workspace
        bindsym $mod+period workspace next
        bindsym $mod+comma workspace prev
        
        # move focused workspace between monitors
        bindsym $mod+Ctrl+greater move workspace to output right
        bindsym $mod+Ctrl+less move workspace to output left

    # layout:
        # horizontal and vertical split control
        bindsym $mod+h splith
        bindsym $mod+v splitv

        # Switch the current container between different layout styles
        # bindsym $mod+s layout stacking
        # bindsym $mod+w layout tabbed
        # bindsym $mod+e layout toggle split

        # fullscreen
        bindsym $mod+f fullscreen

        # toggle tiling vs floating
        bindsym $mod+Ctrl+space floating toggle

    # scratchpad:
        # Sway has a "scratchpad", which is a bag of holding for windows.
        # You can send windows there and get them back later.
        # put focused window in scratchpad
        bindsym $mod+Shift+space move scratchpad

        # Show the next scratchpad window or hide the focused scratchpad window.
        # If there are multiple scratchpad windows, this command cycles through them.
        bindsym $mod+space scratchpad show

    # resizing containers:
        mode "resize" {
            # left will shrink the containers width
            bindsym Left resize shrink width 10px
            # up will shrink the containers height
            bindsym Up resize grow height 10px
            # down will grow the containers height
            bindsym Down resize shrink height 10px
            # right will grow the containers width
            bindsym Right resize grow width 10px

            # return to default mode
            bindsym Return mode "default"
            bindsym Escape mode "default"
        }
        bindsym $mod+r mode "resize"

# status Bar:
bar {
    status_command i3status -c ~/.config/i3status/config
    font pango:RobotoMono Nerd Font 11
    separator_symbol " "
    position top
    strip_workspace_numbers yes
    tray_output primary

    colors {
        background #2E3440
        statusline #ECEFF4
        # workspace         border  background  text
        focused_workspace   #2E3440 #5E81AC     #ECEFF4
        active_workspace    #2E3440 #5E81AC     #ECEFF4
        inactive_workspace  #2E3440 #2E3440     #ECEFF4
        urgent_workspace    #2E3440 #BF616A     #ECEFF4
    }
}

# autoassignments
assign [class="Thunderbird"] workspace number $ws1
assign [class="telegram-desktop"] workspace number $ws2
assign [class="signal"] workspace number $ws2
assign [class="slack"] workspace number $ws3
assign [class="firefox"] workspace number $ws4
# assign [class="chromium"] workspace number $ws5

# Autostarts
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id blueman-applet
exec --no-startup-id "udiskie --tray &"  # for auto mounting usb drives
exec --no-startup-id mullvad-vpn
exec thunderbird
exec slack
# exec telegram-desktop
exec signal-desktop
# exec firefox
# exec --no-startup-id i3-msg 'workspace 5; exec chromium; workspace 1'
